# Setup fzf
# ---------
if [[ ! "$PATH" == */home/z0d1ac/.fzf/bin* ]]; then
  PATH="${PATH:+${PATH}:}/home/z0d1ac/.fzf/bin"
fi

# Auto-completion
# ---------------
source "/home/z0d1ac/.fzf/shell/completion.bash"

# Key bindings
# ------------
source "/home/z0d1ac/.fzf/shell/key-bindings.bash"

# Env variables
# -------------
export FZF_DEFAULT_OPTS="--layout=reverse --ansi"
export FZF_CTRL_R_OPTS="--prompt '$ '"
# export FZF_DEFAULT_COMMAND='find .'
export FZF_ALT_C_COMMAND='find . -type d'

# Catppuccin mocha theme
# ----------------------
export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
--color=spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#f5e0dc,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8"
# default background color
# --color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
