# Ctrl+backspace: delete word backward (same as Ctrl+w and Alt+Backspace)
bind '"\C-h": backward-kill-word'

# Ctrl+p: Copy current line to clipboard (xclip)
bind '"\C-p": "\C-e\C-uxclip -selection clipboard <<EOTFF\n\C-y\nEOTFF\n"'

# Alt+l: clear screen
bind '"\el": "\C-k\C-uclear\n"'

# Alt+h: run cht
bind '"\eh": "\C-k\C-ucht\n"'
